/* pages/shoppingcart/shoppingcart.wxss */

page
{
  background-color: #F3F4F6;
}
.blank
{
  height: 100rpx;
}
.total-price-view
{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}
.top-right-corner-view
{
  position: fixed;
  top: 0;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(0,0,0,1);
  z-index: 999;
  width: 100%;
  background-color: white;
  text-align: right;
}
.top-right-corner
{
  margin-right: 5%;
}
.checkbox-seleted
{
  font-size: 28rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(0,0,0,1);
}
.button-image
{
  height: 40rpx;
  width: 40rpx;
}
.button-image::after
{
  border: none;
}
.button-green {
  background-color: #181818; /* Green */
}
.button-black
{ 
  background-color: #232321; 
  border-radius: 0;
  width: 40%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(255,255,255,1);
}

.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 999;
  width: 100%;
  height: 80rpx;
}
.button-label
{
 font-size:18rpx;
font-family:PingFang-SC-Medium;
color:rgba(0,0,0,1);
line-height:28px;
}
.car-view
{
  margin-left:5%; 
  margin-top:2%;
  height: 100%;
  width: 60%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
}
.shoppingcartnull-button
{
  margin-top: 10%;
  height: 51rpx;
  width: 176rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(255,255,255,1);
  background-color: black;
  display:flex;
  flex-direction:column;
  justify-content: center;/*垂直居中*/
  border-radius: 0rpx;
}
.shoppingcartnull-label
{
  margin-top: 10%;
  height:22rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(178,178,178,1);
  line-height:0px;
}
.shoppingcartnull-view
{
  height: 100%;
  width: 100%;
  position: fixed;
  display:flex;
  flex-direction:column;
  align-items:center;/*水平居中*/
  
}
.shoppingcartnull-bg-view
{
  margin-top:30%; 
  display:flex;
  flex-direction:column;
  align-items:center;/*水平居中*/
  justify-content: center;/*垂直居中*/
  height: 260rpx;
  width: 260rpx;
  border-radius: 150rpx;
  background-color: #FAFAFA;
}
.shoppingcartnull-image
{
  width: 114rpx;
  height: 134rpx;
  margin: auto;
}
.controls {
  position: relative;
  top: 50%;
  height: 50px;
  margin-top: -25px;
  display: flex;
}
.play,.pause,.time {
  flex: 1;
  height: 100%;
}
.time {
  text-align: center;
  background-color: rgba(0, 0, 0, .5);
  color: white;
  line-height: 50px;
}
.img {
  width: 40px;
  height: 40px;
  margin: 5px auto;
}