@import "../confirmorder/confirmorder.wxss";
.order-commodity
{
  margin-top:5%;
  margin-bottom:5%;  
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom:1px solid  #F1F2F4;
  border-top:1px solid  #F1F2F4;
  justify-content: space-between;
}
.order-commodity-item
{
  height: 110rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(35,35,33,1);
  background-color: white;
  border-radius: 0rpx;
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  align-items: center; 
}
.pay-text
{
  font-size: 28rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(35,35,33,1);
}
.pay-view
{
  display: flex;
  flex-direction: row;
  align-items: center;
  float: right;
  right: 0;
}
.order-button-view
{
  float: left;
  left: 0;
  display: flex;
  flex-direction: row;
}
.order-button
{
  padding-left: 0;
  padding-right: 0;
  height: 40rpx;
  width: 120rpx;
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(0,0,0,1);
  border-radius: 0;
  border: 1px solid black;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.order-button1
{
  margin-left: 4%;
  padding-left: 0;
  padding-right: 0;
  height: 40rpx;
  width: 120rpx;
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(0,0,0,1);
  border-radius: 0;
  border: 1px solid black;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
button::after
{
  border-radius: 0;
}
.order-title-view
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(35,35,33,1);
  margin-top:4%;
}
.flaot-container{
  display: flex;
  flex-direction: column;
}
.classify-view
{
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
  margin-left: 5%;
  margin-right: 5%;
  margin-bottom: 5%;
  height: 100%;
}
.classify-image
{
  height: 400rpx;
  width: 100%;
}

