/* components/conpon-item-bottom/conpon-item-bottom.wxss */
@import '/components/float-tab-bottom/float-tab-bottom.wxss';


.noconpon-view
{
  height: 100rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.noconpon-title
{
  margin-left: 36rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(0,0,0,1);
}
.conpon-view
{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.conpon-bottom-dialog {
  font-size:32rpx;
  width: 100%;
  position: fixed;
  bottom:0;
  float: left;
  z-index: 999;
}

.conpon-item-price-view
{
  padding-top:32rpx;
  padding-bottom: 32rpx; 
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.row-view
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.column-view
{
  display: flex;
  flex-direction: column;
}
.conpon-item-text
{
  margin-right:20rpx; 
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(24,24,24,1);
}
.conpon-item-time
{
  margin-right:20rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(102,102,102,1);
}
.conpon-item
{
  text-align: right;
  /* height: 200rpx; */
  /* display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between; */
}
.conpon-checkbox
{
  margin-right: 35rpx;
}
.conpon-checkbox-hidden
{
  margin-right: 35rpx;
  opacity: 0;
}
.conpon-item-price
{
  margin-left: 49rpx;
  display: flex;
  font-size:68rpx;
  font-family:PingFang-SC-Heavy;
  font-weight:800;
  color:rgba(235,55,54,1);
}
.conpon-btn {
  display: flex;
  flex-direction: column;
  border-radius: 3rpx;
  font-size: 24rpx;
  cursor: pointer;
  align-items: center;
  justify-content: center;
  color: #fff;
  background-color: #232321;
  height: 100rpx;
}