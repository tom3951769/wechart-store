
.spec-list-view
{
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content:left;
  flex-wrap: wrap;
}
.clearfix
{
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content:left;
  margin-top:20rpx;
  margin-bottom:20rpx;
}
.pay-goods-cover
{
  width: 200rpx;
  height: 200rpx;
  z-index: 999;

}
.btn {
  position: absolute;
  bottom:10rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  display: flex;
  flex-direction: column;
  border-radius: 3rpx;
  font-size: 24rpx;
  cursor: pointer;
  align-items: center;
  justify-content: center;
  color: #fff;
  background-color: #232321;
  width: 730rpx;
  height: 100rpx;
}
.payDialog-bg
{
  height: 100%;
  background-color: #B2B2B2;
  opacity: 0.8;
  z-index: 1;
}
.pull-left {
  width: 100rpx;
}
.pull-right {
  margin-left:30%; 
   display: flex;
  flex-direction: row;
  align-items: center;
  float: right;
}

.pay-buy-count-label {
  text-align: center;
  width:33%;
  font-size: 30rpx;
  font-weight: bold;
}

.pay-buy-count {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 60rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(0, 0, 0, 1);
}
.quantity {
  float: right;
  right: 0;
  width: 172rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1rpx solid #dedede;
}

.page-dialog-wrap
{
  font-size:24rpx;
  color:#c9c9c9;
  text-decoration:line-through;
  position: fixed;
  bottom: 0;
  height: 100%;
  float: left;
  width: 100%;
}
.page-bottom-dialog {
  font-size:32rpx;
  height: 770rpx;
  width: 100%;
  position: fixed;
  bottom:0;
  float: left;
  z-index: 999;
}

.page-bottom-content {
  position:relative;
  height: 100%;
  margin: 0 auto;
  background-color: #fff;
}
.page-dialog-close{
  position: absolute;
  display: block;
  width: 60rpx;
  height: 60rpx;
  color:black;
  text-align: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 60rpx;
  right: 2%;
  z-index: 1000;
}

.dialog-block-item1 {
  margin:0 5% 0 5%;
  height: 200rpx;
  position: relative;
  border-bottom: 1rpx solid #eee;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  color: #27262B;
}
.dialog-block-item {
  margin:0 5% 0 5%;
  position: relative;
  border-bottom: 1rpx solid #eee;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  color: #27262B;
  display: flex;
  flex-direction: column;
  justify-content: center;

}


.thumb {
  margin-top:3%;
  margin-left: 5%;
  float: left;
  width: 200rpx;
  height: 130rpx;
  /* margin: 4.68rpx 23.4rpx 0 23.4rpx; */
  position: relative;
  z-index: 999;
}
.thumb .thumb-wrap {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  border:1px solid #dedede;
  border-radius: 0rpx;
  background-color: #fff;
  overflow: hidden;
  z-index: 999;
}

.price-current-view
{

  margin-top:5%;
  margin-left: 45%;
  position:absolute;
  font-size: 28rpx;
  color:#181818;
  font-family:PingFang-SC-Medium;
}


.originalprice-label
{
  font-size: 30rpx;
  text-decoration:line-through;
  color: #A0A0A0;
}



.commodityinfo-color
{
  margin-left: 20rpx; 
  background-color: #000000;
  border-radius: 5rpx;
  padding: 15rpx;
  color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top:20rpx;

}

.size-item-text-selected
{
  display: inline;
  margin-left: 20rpx; 
  background-color: #000000;
  border-radius: 5rpx;
  padding: 10rpx;
  color: white;
  
}
.size-item-text
{
  margin-left: 20rpx; 
  background-color:white;
  border: 1rpx solid #B2B2B2;
  border-radius: 5rpx;
  padding: 15rpx;
  color: black;
  margin-top:20rpx;

}

.clearfix::after {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.clearfix1
{
  justify-content:space-between;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
}
